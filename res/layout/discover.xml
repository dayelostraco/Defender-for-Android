<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="Core Defender"
            android:id="@+id/textView" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover Defenders"
            android:id="@+id/discoverDevices"
            android:layout_centerHorizontal="true" android:layout_below="@+id/textView"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/devicesList" android:layout_alignLeft="@+id/textView" android:layout_below="@+id/discoverDevices"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>